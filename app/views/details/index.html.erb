<p id="notice"><%= notice %></p>

<h1>Confirm Your Address Details</h1>

<table  class="table table-success table-striped">
  <thead>
    <tr>
      <th>Pickup address</th>
      <th>Deliver address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.pickup_address %></td>
        <td><%= detail.deliver_address %></td>
        
       
        <td><%= link_to 'Edit', edit_detail_path(detail), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Delete', detail, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Thank You for Your Order!!!!</h1>
<p>

<%= link_to 'Confirm & return to main page',new_user_session_path,  class:"btn btn-info" %>
</p>
