<p id="notice"><%= notice %></p>

<h1>Confirm Your Order</h1>

<table  class="table table-success table-striped">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product_name %></td>
        <td><%= cart.quantity %></td>
        
        <td><%= link_to 'Edit', edit_cart_path(cart), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Delete', cart, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

