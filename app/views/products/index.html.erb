<p id="notice"><%= notice %></p>

<h1 class="mb-5">Products List</h1>

<table class="table table-striped" style="width: 500px">
  <thead class="table-dark">
    <tr>
      <th>Order items</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.order_items %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class:"btn btn-outline-secondary" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
